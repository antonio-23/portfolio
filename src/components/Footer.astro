---
import { Github, LinkedinIcon } from "lucide-react";
const currentYear = new Date().getFullYear();
---

<footer>
  <div class='group'>
    <p>
      Built with <a class='link' href='https://astro.build/'> Astro</a>
    </p>
    <p>&copy; {currentYear} Antoni Garczy≈Ñski</p>
  </div>
  <div class='socials'>
    <a class='link' href='https://github.com/antonio-23'><Github size={20} /></a
    >
    <a class='link' href='https://www.linkedin.com/in/antoni-garczynski/'
      ><LinkedinIcon size={20} /></a
    >
  </div>
</footer>

<style>
  footer {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 3rem;
    padding: 1.5rem 3rem;
    color: var(--color-gray-400);
    font-size: 0.875rem;
    background-color: var(--element-bg);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    z-index: 10;
  }

  .group {
    display: flex;
    flex-direction: row;
    gap: 2rem;
  }

  .socials {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    color: var(--color-gray-400);
  }

  @media screen and (max-width: 640px) {
    .group {
      display: flex;
      justify-content: space-between;
      flex-wrap: nowrap;
    }

    .socials {
      display: flex;
      flex-wrap: nowrap;
    }

    footer {
      font-size: 0.8rem;
      padding: 0.9rem 2rem;
      gap: 1rem;
      align-items: center;
    }
  }
</style>
