---
import Image from "astro/components/Image.astro";
import avatar from "../images/memoji.jpg";
---

<div class='container'>
  <Image class='image' src={avatar} alt='Avatar' />
  <span class='ring'></span>
</div>

<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .image {
    width: 270px;
    height: 270px;
    border-radius: 50%;
    position: relative;
    z-index: 1;
  }

  .ring {
    position: absolute;
    width: 380px;
    height: 380px;
    border: 15px solid var(--element-bg);
    backdrop-filter: var(--blur);
    -webkit-backdrop-filter: var(--blur);
    box-shadow: var(--shadow);
    border-radius: 50%;
    z-index: 10;
  }

  @media screen and (max-width: 1024px) {
    .image {
      width: 200px;
      height: 200px;
    }

    .ring {
      width: 300px;
      height: 300px;
    }
  }
</style>
